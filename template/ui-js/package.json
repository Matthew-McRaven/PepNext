{
  "name": "@pepnext/ui-sample",
  "version": "3.2.0",
  "description": "Base configuration for our UI libraries.",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:pepnext/ui/sample.gitt"
  },
  "license": "GPL-3.0",
  "author": "Matthew McRaven",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "!**/*.test.*",
    "!**/*.stories.*"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run clean && vite build",
    "typecheck": "node $(npm bin)/tsc -p tsconfig.json --noEmit",
    "build-storybook": "build-storybook",
    "clean": "npx rimraf -rf ./dist",
    "prepublishOnly": "npm run build",
    "start-storybook": "start-storybook -p 6006",
    "test": "node $(npm bin)/jest",
    "test:ci": "npm run test -- --ci --reporters=default --reporters=jest-junit --coverageReporters=cobertura --coverage && npm run globcov",
    "globcov": "python3 .scripts/scripts/merge-cobertura.py -o coverage.xml  coverage/cobertura-coverage.xml"
  },
  "eslintConfig": {
    "extends": "./node_modules/@pepnext/eslint/.eslintrc.js"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@jest/globals": "^27.3.1",
    "@mdx-js/react": "^2.1.3",
    "@pepnext/eslint": "^3.0.3",
    "@pepnext/tsconfig": "^3.0.0",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-controls": "^6.5.12",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-storyshots": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/cli": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.4.0",
    "@types/react": "^18.0.0",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.0.6",
    "copyfiles": "^2.4.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "jsdom": "^19.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.8.3",
    "@vitejs/plugin-react": "^2.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "vite": "^3.1.4",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "css-loader": "^5.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.4.0",
    "react-router-dom": "^6.4.0",
    "sass": "^1.43.4",
    "sass-loader": "^10.2.0",
    "style-loader": "^2.0.0"
  },
  "packageManager": "npm@6.14.17",
  "publishConfig": {
    "@pepnext:registry": "https://gitlab.com/api/v4/projects/39878886/packages/npm/"
  }
}
